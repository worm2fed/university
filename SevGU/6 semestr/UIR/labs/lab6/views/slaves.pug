extends layout

block content
  h1= title
  each _, i in rows
    h3= 'MySQL ' + names[i] + ' at ' + conn[i].host + ':' + conn[i].port
    table
      tr
        th= 'id'
        th= 'title'
        th= 'posts_count'
        for rec in rows[i]
          tr
            td= rec.id
            td= rec.title
            td= rec.posts_count
